<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/what_do_you_want_to_draw"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/drawCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="DrawCar"
            android:text="@string/draw_car" />

        <Button
            android:id="@+id/drawArcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:onClick="DrawArcs"
            android:text="@string/drawarcs"
            tools:text="Draw Arcs" />

        <Button
            android:id="@+id/drawFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:onClick="DrawFlag"
            android:text="@string/draw_flag" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>